<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    tools:background="@color/weather_primary"
    >

    <LinearLayout
        android:id="@+id/ll_current_weather_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold"
            tools:text="12° / 15°"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold"
            tools:text="12° / 15°"
            tools:visibility="visible"
            />

        <ImageView
            android:id="@+id/iv_detail_star_city"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:scaleType="centerCrop"
            android:src="@null"
            tools:src="@mipmap/icon_stared"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp" >

            <ImageView
                android:id="@+id/iv_video_icon"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@mipmap/video_entrance1"
                android:scaleType="fitXY"
                android:background="@color/transparent"
                />

            <ImageView
                android:id="@+id/iv_location_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@mipmap/map_entrance"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 白天天气、夜间天气、月相 -->
        <include
            android:id="@+id/weather_moon_phase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/item_three_parts_detail"
            android:visibility="visible"
            tools:visibility="gone"
            />

        <!-- 湿度、紫外线强度、气压 -->
        <include
            android:id="@+id/humidity_uv_pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/item_three_parts_detail"
            android:layout_marginTop="30dp"
            android:visibility="visible"
            tools:visibility="gone"
            />

        <!-- 日降水量、能见度、空 -->
        <include
            android:id="@+id/rain_vis_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/item_three_parts_detail"
            android:layout_marginTop="30dp"
            android:visibility="visible"
            tools:visibility="visible"
            />

        <!-- 日出日落 -->
        <TextView
            android:id="@+id/tv_sunrise_sunset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:text=""
            tools:text="日出：06:00 日落：18:00 日出：06:00 日落：18:00"
            />

        <!-- 月升月落 -->
        <TextView
            android:id="@+id/tv_moonrise_moonset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:text=""
            tools:text="月出：06:00 月落：18:00"
            />

        <!-- 白风和夜风 -->
        <TextView
            android:id="@+id/tv_day_wind_night_wind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:lineSpacingExtra="8dp"
            android:text=""
            tools:text="白天风：10km/h 夜间风：10km/h"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_weather_others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>