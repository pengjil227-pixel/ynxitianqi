<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/weather_card_background"
    app:cardCornerRadius="8dp"
    android:padding="8dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_weather_index_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="湿度"
            tools:textColor="@color/default_gray" />

        <TextView
            android:id="@+id/tv_weather_index_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="湿度"
            tools:textColor="@color/default_gray" />

        <TextView
            android:id="@+id/tv_weather_index_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="不宜洗车，较易感冒，体质较弱，请注意防护，未来24小时内有雨，如果在此期间发生感冒，需要及时就医。"
            tools:textColor="@color/default_gray" />
    </LinearLayout>
</androidx.cardview.widget.CardView>